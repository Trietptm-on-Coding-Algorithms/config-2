#!/bin/sh

# resume work-mode when this dies
trap 'echo && work ; sudo -k' 0
sudo sed -E -i.bak '/\.(com|org|kr)/d' /etc/hosts

if uname | grep Darwin; then
    dscacheutil -flushcache
fi >/dev/null

[ "$#" -ne 0 ] && echo "$@" >> ~/.work_reason

function displaytime {
  local T=$1
  local D=$((T/60/60/24))
  local H=$((T/60/60%24))
  local M=$((T/60%60))
  local S=$((T%60))
  (( $D > 0 )) && printf '%d days ' $D
  (( $H > 0 )) && printf '%d hours ' $H
  (( $M > 0 )) && printf '%d minutes ' $M
  (( $D > 0 || $H > 0 || $M > 0 )) && printf 'and '
  printf $'%d seconds' $S
}

start=$SECONDS
while true; do
    sleep 0.6
    elapsed=$(($SECONDS-$start))
    printf $"\rYou should be working on: $(tail -n1 ~/.work_reason) ($(displaytime $elapsed))"
    tput el

    # No more than fifteen minutes at a time.
    [ $elapsed -gt $((15*60)) ] && break

    # Keep sudo alive so it works in 'work'
    sudo -v
done
