#!/bin/bash

case "$1" in
    on)  val=1 ;;
    ON)  val=1 ;;
    1)   val=1 ;;
    off) val=0 ;;
    OFF) val=0 ;;
    0)   val=0 ;;
    "")  val=$(cat /proc/sys/kernel/randomize_va_space) ;;
esac

text="on"
if [[ $val == 0 ]];
then
    text="off"
fi

echo "ALSR is $text"
echo $val | sudo tee /proc/sys/kernel/randomize_va_space >> /dev/null
