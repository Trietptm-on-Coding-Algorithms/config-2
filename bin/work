#!/bin/sh

# Turn off
cat <<EOF |
127.0.0.1 ssl.reddit.com reddit.com www.reddit.com
127.0.0.1 slashdot.org www.slashdot.org
127.0.0.1 uoutube.com www.youtube.com
127.0.0.1 twitter.com www.twitter.com
127.0.0.1 facebook.com www.facebook.com
127.0.0.1 amazon.com www.amazon.com
127.0.0.1 pwnable.kr www.pwnable.kr io.smashthestack.org smashthestack.org
127.0.0.1 github.com www.github.com
EOF
sudo tee -a /etc/hosts >/dev/null

if uname | grep Darwin; then
    dscacheutil -flushcache
fi > /dev/null

[ "$#" -ne 0 ] && echo "$@" >> ~/.work_reason
echo "Now you're working on: $(tail -n1 ~/.work_reason)"
